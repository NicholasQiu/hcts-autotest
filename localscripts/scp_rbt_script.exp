#!/usr/bin/expect -f
set hostname [lindex $argv 0]

spawn scp remotescript/rbt.sh root@$hostname:/root/
set timeout 10

expect {
	timeout {
		echo "scp reboot script timeout." >> /tmp/hctsauto.log
		exp_exit
	}
	"yes/no" {
		send -- "yes\r"
		exp_continue
	}
	"assword:" {
		send -- "l1admin\r"
		interact
	}
}
